APP_NAME="Image Gallery"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_PORT=80
VITE_PORT=5173

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database - PostgreSQL Container
DB_CONNECTION=pgsql
DB_HOST=pgsql
DB_PORT=5432
DB_DATABASE=image_gallery
DB_USERNAME=sail
DB_PASSWORD=password

# Sessions - Use Redis for better performance
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log

# File Storage - Use MinIO (S3-compatible)
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis

# Cache - Use Redis
CACHE_STORE=redis
CACHE_PREFIX=image_gallery_cache

MEMCACHED_HOST=127.0.0.1

# Redis Container Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail - Use Mailpit Container for Testing
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@image-gallery.local"
MAIL_FROM_NAME="${APP_NAME}"

# MinIO Configuration (S3-compatible object storage)
AWS_ACCESS_KEY_ID=sail
AWS_SECRET_ACCESS_KEY=password
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=local
AWS_USE_PATH_STYLE_ENDPOINT=true
AWS_ENDPOINT=http://minio:9000
AWS_URL=http://localhost:9000/local

# Vite Frontend Configuration
VITE_APP_NAME="${APP_NAME}"

# Gallery Specific Settings
GALLERY_MAX_UPLOAD_SIZE=52428800
GALLERY_ALLOWED_MIMES="jpg,jpeg,png,webp,avif"
GALLERY_DEFAULT_PRIVACY=unlisted
GALLERY_ENABLE_REGISTRATION=true
GALLERY_ENABLE_COMMENTS=true
GALLERY_ENABLE_LIKES=true
GALLERY_PRESIGN_TTL=900
GALLERY_DOWNLOAD_TTL=300

# Image Processing
GALLERY_THUMB_SIZE=200
GALLERY_SMALL_SIZE=640
GALLERY_MEDIUM_SIZE=1280
GALLERY_LARGE_SIZE=1920
GALLERY_QUALITY_JPEG=85
GALLERY_QUALITY_WEBP=80

# Admin User (for seeding)
ADMIN_NAME="Gallery Admin"
ADMIN_EMAIL=admin@gallery.local
ADMIN_PASSWORD=admin123

# Rate Limiting
GALLERY_UPLOAD_RATE_LIMIT=10
GALLERY_COMMENT_RATE_LIMIT=5

# CDN Configuration (Optional)
CDN_URL=
CDN_ENABLED=false
